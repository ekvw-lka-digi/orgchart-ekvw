{
  "title": "Organization chart",
  "description": "Organization chart for Berlin's administration",
  "version": 1,
  "definitions": {
    "additionalProperties": false,
    "document": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string",
          "title": "Dateiname"
        },
        "paperSize": {
          "type": "string",
          "title": "Ausgabegröße",
          "default": "A4",
          "enum": [
            "A5",
            "A4",
            "A3",
            "A2"
          ]
        },
        "schemaVersion":{
          "type": "string",
          "title": "Schema",
          "default": "1.0.0"
        },
        "pageOrientation": {
          "type": "string",
          "title": "Orientierung",
          "default": "landscape",
          "enum": [
            "landscape",
            "portrait"
          ],
          "enumNames": ["Querformat", "Hochformat"]
        },
        "logo": {
          "title": "Logo",
          "type": "string",
          "format": "data-url"
        },
        "version": {
          "type": "string",
          "format": "date",
          "title": "Version"
        },
        "creator": {
          "type": "string",
          "title": "Verfasser"
        },
        "note": {
          "type": "string",
          "title": "Notiz"
        }
      },
      "required": ["title"],
      "title": "Document"
    },
    "organisation": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "examples": [
            "Abteilung",
            "Amt",
            "Bezirksamt",
            "Büro",
            "Büroleiter",
            "Fachbereich",
            "Fachdienst",
            "Landesamt",
            "Landesstelle",
            "Museum",
            "Other",
            "Pressesprecher",
            "Referat",
            "Referent",
            "Senatskanzlei",
            "Senator",
            "Senatsverwaltung",
            "Serviceeinheit",
            "Staatssekretär",
            "Öffentliches Unternehmen",
            "Unternehmen"
          ],
          "title": "Art"
        },
        "name": {
          "type": "string",
          "title": "Bezeichung"
        },
        "altName": {
          "type": "string",
          "title": "Alternative Bezeichung"
        },
        "style": {
          "type": "string"
        },
        "contact": {
          "$ref": "#/definitions/contact"
        },
        "address": {
          "$ref": "#/definitions/address"
        },
        "departments": {
          "type": "array",
          "title": "Abteilungen",
          "items": {
            "$ref": "#/definitions/department"
          }
        },
        "organisations":{
          "type": "array",
          "items": {
            "$ref": "#/definitions/organisation"
          }
        },
        "relationship":{
          "type": "string",
          "format": "integer"
        }
      },
      "required": ["id","name"],
      "title": "Organisation"
    },
    "department": {
      "type": "object",
      "additionalProperties": false,
      "title": "Abteilung",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "title": "Bezeichung",
          "default": "Neue Abteilung"
        },
        "employees": {
          "title": "Personen",
          "type": "array",
          "items": {
            "$ref": "#/definitions/employee"
          }
        }
      }
    },
    "employee": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "salutation": {
          "type": "string",
          "examples": ["Frau", "Herr"],
          "title": "Anrede"
        },
        "title": {
          "type": "string",
          "title": "Title"
        },
        "firstName": {
          "type": "string",
          "title": "Vorname"
        },
        "lastName": {
          "type": "string",
          "title": "Nachname"
        },
        "position": {
          "type": "string",
          "title": "Position"
        },
        "contact": {
          "$ref": "#/definitions/contact"
        }
      },
      "required": ["lastName"],
      "title": "Person"
    },
    "contact": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "telephone": {
          "type": "string",
          "title": "Telefonnummer"
        },
        "fax": {
          "type": "string",
          "title": "Faxnummer"
        },
        "email": {
          "type": "string",
          "title": "E-Mail"
        },
        "website": {
          "type": "string",
          "format": "uri",
          "title": "Website"
        }
      },
      "title": "Kontaktdaten"
    },
    "address": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "street": {
          "type": "string",
          "title": "Straße"
        },
        "housenumber": {
          "type": "string",
          "title": "Hausnummer"
        },
        "building": {
          "type": "string",
          "title": "Gebäude"
        },
        "room": {
          "type": "string",
          "title": "Raum"
        },
        "zipCode": {
          "type": "string",
          "format": "int32",
          "title": "PLZ"
        },
        "city": {
          "type": "string",
          "title": "Stadt"
        }
      },
      "title": "Anschrift"
    }
  },
  "properties": {
    "document": {
      "$ref": "#/definitions/document"
    },
    "organisations": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/organisation"
      }
    }
  }
}
