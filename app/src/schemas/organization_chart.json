{
  "title": "Organization chart",
  "description": "Organization chart for Berlin's administration",
  "version": "0.0.1",
  "definitions": {
    "additionalProperties": false,
    "document": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string",
          "title": "Title"
        },
        "paperSize": {
          "type": "string",
          "title": "Ausgabegröße",
          "default": "A4",
          "enum": ["A5", "A4", "A3", "A2"]
        },
        "schemaVersion": {
          "type": "string",
          "title": "Schema",
          "default": "0.0.1"
        },
        "paperOrientation": {
          "type": "string",
          "title": "Orientierung",
          "default": "landscape",
          "enum": ["landscape", "portrait"],
          "enumNames": ["Querformat", "Hochformat"]
        },
        "logo": {
          "title": "Logo",
          "type": "string",
          "format": "data-url"
        },
        "version": {
          "type": "string",
          "format": "date",
          "title": "Version"
        },
        "creator": {
          "type": "string",
          "title": "Verfasser"
        },
        "note": {
          "type": "string",
          "title": "Fußzeile"
        }
      },
      "required": ["title"],
      "title": "Document"
    },
    "organisation": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "examples": [
            "Abteilung",
            "Amt",
            "Bezirksamt",
            "Büro",
            "Büroleiter",
            "Fachbereich",
            "Fachdienst",
            "Landesamt",
            "Landesstelle",
            "Museum",
            "Other",
            "Pressesprecher",
            "Referat",
            "Referent",
            "Senatskanzlei",
            "Senator",
            "Senatsverwaltung",
            "Serviceeinheit",
            "Staatssekretär",
            "Öffentliches Unternehmen",
            "Unternehmen"
          ],
          "title": "Art"
        },
        "name": {
          "type": "string",
          "title": "Bezeichung"
        },
        "altName": {
          "type": "string",
          "title": "Alternative Bezeichung"
        },
        "style": {
          "type": "string",
          "title": "Stil",
          "default": "default",
          "enum":[
            "default",
            "emphasized",
            "light"
          ],
          "enumNames":["Standard","Hervorgehoben", "Zurückgenommen"]
        },
        "contact": {
          "$ref": "#/definitions/contact"
        },
        "address": {
          "$ref": "#/definitions/address"
        },
        "departments": {
          "type": "array",
          "title": "Abteilungen",
          "items": {
            "$ref": "#/definitions/department"
          }
        },
        "organisations": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/organisation"
          }
        },
        "relationship": {
          "type": "string",
          "format": "integer"
        }
      },
      "required": ["id", "name"],
      "title": "Organisation"
    },
    "department": {
      "type": "object",
      "additionalProperties": false,
      "title": "Abteilung",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "title": "Bezeichung",
          "default": "Neue Abteilung"
        },
        "employees": {
          "title": "Personen",
          "type": "array",
          "items": {
            "$ref": "#/definitions/employee"
          }
        }
      }
    },
    "employee": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "salutation": {
          "type": "string",
          "examples": ["Frau", "Herr"],
          "title": "Anrede"
        },
        "title": {
          "type": "string",
          "title": "Title"
        },
        "firstName": {
          "type": "string",
          "title": "Vorname"
        },
        "lastName": {
          "type": "string",
          "title": "Nachname"
        },
        "position": {
          "type": "string",
          "title": "Position"
        },
        "contact": {
          "$ref": "#/definitions/contact"
        }
      },
      "title": "Person"
    },
    "contact": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "telephone": {
          "type": "string",
          "title": "Telefonnummer"
        },
        "fax": {
          "type": "string",
          "title": "Faxnummer"
        },
        "email": {
          "type": "string",
          "title": "E-Mail"
        },
        "website": {
          "type": "string",
          "title": "Website"
        }
      },
      "title": "Kontaktdaten"
    },
    "address": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "street": {
          "type": "string",
          "title": "Straße"
        },
        "housenumber": {
          "type": "string",
          "title": "Hausnummer"
        },
        "building": {
          "type": "string",
          "title": "Gebäude"
        },
        "room": {
          "type": "string",
          "title": "Raum"
        },
        "zipCode": {
          "type": "string",
          "format": "int32",
          "title": "PLZ"
        },
        "city": {
          "type": "string",
          "title": "Stadt"
        }
      },
      "title": "Anschrift"
    },
    "exportNEW": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "filename": {
          "type": "string",
          "title": "Dateiname"
        },
        "saveExport": {
          "type": "string",
          "title": "Möchten Sie das Dokument sichern oder als Bild oder Dokument expotieren?",
          "default": "save",
          "enum": ["save", "export"],
          "enumNames": ["Sichern", "Exportieren"]
        },
        "exportType": {
          "type": "string",
          "title": "Dateiformat",
          "default": "pdf",
          "enum": ["svg", "png", "pdf"]
        }
      }
    },
    "export": {
      "title": "Export Options",
      "type": "object",
      "properties": {
        "filename": {
          "type": "string",
          "title": "Dateiname"
        },
        "saveExport": {
          "type": "string",
          "title": "Möchten Sie das Dokument zur erneuten Bearbeitung sichern oder zur Weiterverwendung exponieren?",
          "default": "save",
          "enum": ["save", "export"],
          "enumNames": ["Sichern", "Exportieren"]
        }
      },
      "dependencies": {
        "saveExport": {
          "oneOf": [
            {
              "properties": {
                "saveExport": {
                  "enum": ["save"]
                }
              }
            },
            {
              "properties": {
                "saveExport": {
                  "enum": ["export"]
                },
                "includeLogo": {
                  "type": "boolean",
                  "title": "Logo in beim Exportieren einbetten",
                  "default": true
                },
                "exportType": {
                  "type": "string",
                  "title": "Dateiformat",
                  "default": "pdf",
                  "enum": ["json", "svg", "png", "pdf"],
                  "enumNames": ["JSON", "SVG", "PNG", "PDF"]
                }
              }
            }
          ]
        },
        "exportType": {
          "oneOf": [
            {
              "properties": {
                "exportType": {
                  "enum": ["json"]
                }
              }
            },
            {
              "properties": {
                "exportType": {
                  "enum": ["svg"]
                }
              }
            },
            {
              "properties": {
                "exportType": {
                  "enum": ["png"]
                }
              }
            },
            {
              "properties": {
                "exportType": {
                  "enum": ["pdf"]
                },
                "pdfType": {
                  "type": "string",
                  "title": "PDF Prozess",
                  "default": "png",
                  "enum": ["svg", "png"],
                  "enumNames": [
                    "Eingebetter Text (experimentell)",
                    "Bidmap (Bessere Darstellung)"
                  ]
                }
              }
            }
          ]
        }
      }
    }
  },
  "properties": {
    "document": {
      "$ref": "#/definitions/document"
    },
    "organisations": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/organisation"
      }
    }
  }
}
